<div class="container">
<p id="notice"><%= notice %></p>

    <h1 title="Users list">Users list</h1>
<%= link_to 'New User', new_user_path, class: "btn btn-warning"%>
  <p title="Please find here all the users :">Please find here all the bugs :</p>            
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Username</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Show', user, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-success"  %></td>
        <td><%= link_to 'Trash', user, class:"btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>

    </tbody>
  </table>
</div>