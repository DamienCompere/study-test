<p id="alert"><%= alert%></p>

<h1>Please Log in</h1>

<%= form_tag sessions_path do |form| %>
    <div class="form-group">
        <%= label_tag :username %>
        <%= text_field_tag :username %>
    </div>

    <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>

    <div class="actions">
        <%= submit_tag "Login", class: "btn btn-primary" %>
    </div>
<% end %>


